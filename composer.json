{
    "name": "foa/filter-intl-bundle",
    "type": "library",
    "description": "Integration bundle for Aura.Filter with Aura.Intl",
    "keywords": [ "filter", "validate", "sanitize", "intl"],
    "homepage": "https://github.com/friendsofaura/FOA.Filter_Intl_Bundle",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "FOA Contributors",
            "homepage": "https://github.com/harikt/FOA.Filter_Intl_Bundle/contributors"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "aura/intl": "dev-develop",
        "aura/filter": "dev-develop"
    },
    "autoload": {        
        "psr-4": {
            "FOA\\Filter_Intl_Bundle\\": "src/",
            "FOA\\Filter_Intl_Bundle\\_Config\\": "config/"
        }
    },
    "extra": {
        "aura": {
            "type": "kernel",
            "config": {
                "common": "FOA\\Filter_Intl_Bundle\\_Config\\Common"                
            }
        }
    }
}
